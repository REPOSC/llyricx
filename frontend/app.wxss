/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.tabbar_box{
    opacity: 1;
    display: flex;
    flex-direction: row;
    justify-content: space-around; /*元素在主轴排列方式*/
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    border-top: 1rpx solid #d7d7d7; 
    z-index: 10;
}


.tabbar_nav{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    height: 100%;
    z-index: 20
}

.tabbar_icon{
  opacity: 1;
    width: 50rpx;
    height:50rpx;
    z-index: 20
}

