/** wxss **/
/** 修改button默认的点击态样式类**/
@import "../../app.wxss";
page{
  height: 100%;
}
.paged{
  margin-bottom: 120rpx;
}
.search_arr {  
  width: 60%;  
  display: inline-flex;
  border: 1px solid #d0d0d0;  
  border-radius: 10rpx;  
  margin-left: 10%;  
  align-items: center; 
}
.search_arr input{  
  margin-left: 40rpx;   
}  
.page_row{  
  align-content:space-around;
  display: flex;  
  flex-direction: row; 
  height: 60rpx;
  margin-top: 100rpx;
}  
.searchcion { 
  display: flex;
  margin-left:10rpx;  
  width: 8%;  
  height: 60%;  
} 
.searchbutton{
  margin-left: 5%;
  width: 15%;
  text-align: center;
  font-size: 25rpx;
}
.image_row{
  display: flex;  
  flex-direction: row; 
  margin-top: 100rpx;
}
.textcol{
  display: flex;
  flex-direction: column;
  width: 50%;
  margin: 30rpx;
  padding: 30rpx;
  line-height: 90rpx;
}
.bookimage{
  margin: 50rpx;
  height: 240rpx;
  width: 240rpx;
}

.btn {
  margin-top: 30rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(0, 180, 165);
}

.booktext{
  font-size: 36rpx;
  text-align: left;
  font-style: italic;
}


